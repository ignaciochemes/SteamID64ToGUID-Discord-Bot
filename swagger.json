                                            "example": "/api/uid?steam=your-steam-id-64-here"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/servers": {
            "get": {
                "tags": [
                    "Servers"
                ],
                "summary": "Get remote game server information",
                "parameters": [
                    {
                        "name": "game",
                        "in": "query",
                        "description": "Game name",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "arma3"
                        }
                    },
                    {
                        "name": "ip",
                        "in": "query",
                        "description": "Game server ip",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "127.0.0.1"
                        }
                    },
                    {
                        "name": "port",
                        "in": "query",
                        "description": "Game port",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "default": 2302
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response -",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "result": {
                                            "$ref": "#/components/schemas/GameServerResponse"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request -",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "statusCode": {
                                            "type": "number",
                                            "format": "number",
                                            "example": 400
                                        },
                                        "error": {
                                            "type": "string",
                                            "format": "string",
                                            "example": "Enter game query parameter"
                                        },
                                        "message": {
                                            "type": "string",
                                            "format": "string",
                                            "example": "/api/servers?game=arma3"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/servers/games/list": {
            "get": {
                "tags": [
                    "Servers"
                ],
                "summary": "Get game list",
                "responses": {
                    "200": {
                        "description": "Successful response -",
                        "content": {

{
    "openapi": "3.0.3",
    "info": {
        "title": "SteamId64ToGuid - Public API",
        "version": "20220928"
    },
    "servers": [
        {
            "url": "https://apidev.steamid64toguid.cf/api/v1"
        }
    ],
    "tags": [
        {
            "name": "Convert"
        },
        {
            "name": "Servers"
        }
    ],
    "paths": {
        "/guid": {
            "get": {
                "tags": [
                    "Convert"
                ],
                "summary": "Convert Steam ID 64 to GUID",
                "parameters": [
                    {
                        "name": "steam",
                        "in": "query",
                        "description": "User Steam ID",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "default": 76561199088563020
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response -",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "result": {
                                            "$ref": "#/components/schemas/GuidSchemaResponse"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request -",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "statusCode": {
                                            "type": "number",
                                            "format": "number",
                                            "example": 400
                                        },
                                        "error": {
                                            "type": "string",
                                            "format": "string",
                                            "example": "Enter the query parameters"
                                        },
                                        "message": {
                                            "type": "string",
                                            "format": "string",
                                            "example": "/api/guid?steam=your-steam-id-64-here"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
